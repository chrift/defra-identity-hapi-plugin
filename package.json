  "pre-commit": [
    "lint"
  ],
  "author": "Department for Environment, Food & Rural Affairs",
  "license": "See LICENSE.md",
  "engines": {
    "node": "~12.16.0",
    "npm": "~6.13.4"
  },
  "dependencies": {
    "@hapi/cookie": "^11.0.0",
    "@hapi/hoek": "^9.0.3",
    "@hapi/joi": "^15.1.1",
    "adal-node": "^0.1.28",
    "await-to-js": "^2.0.1",
    "debug": "^3.1.0",
    "got": "^10.7.0",
    "lodash": "^4.17.20",
    "md5": "^2.2.1",
    "openid-client": "^4.2.0",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "@hapi/code": "^8.0.1",
    "@hapi/lab": "^22.0.3",
    "eslint": "^6.4.0",
    "gulp": "^4.0.0",
    "gulp-cli": "^2.3.0",
    "pre-commit": "^1.2.2",
    "snazzy": "^7.1.1",
    "sonarqube-scanner": "^2.6.0",
    "standard": "^14.3.1",
    "testdouble": "^3.13.0"
  }
